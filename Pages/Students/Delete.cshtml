@page
@model CursosOnline.Pages_Students.DeleteModel

@{
    ViewData["Title"] = "Dev Cursos | Deletar";
}

<h1>Deletar aluno</h1>

<h3>Tem certeza que deseja deletar o aluno?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Cellphone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Cellphone)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Student.Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a class="btn btn-outline-light" asp-page="./Index">Voltar para a lista</a>
        
    </form>
</div>
